@startuml
!theme plain
skinparam componentStyle rectangle
title Traffic Light System - Internal Block Diagram

component RaspberryPi
component "GPIO18 (BCM)" as GPIO18
component "GPIO23 (BCM)" as GPIO23
component "GPIO24 (BCM)" as GPIO24
component "GND" as GND_PI
component "Resistor R1 (220-330Ω)" as R1
component "Red LED" as RedLED
component "Resistor R2 (220-330Ω)" as R2
component "Yellow LED" as YellowLED
component "Resistor R3 (220-330Ω)" as R3
component "Green LED" as GreenLED

RaspberryPi --> GPIO18 : "Red Control"
RaspberryPi --> GPIO23 : "Yellow Control"
RaspberryPi --> GPIO24 : "Green Control"

GPIO18 --> R1 : "Signal"
R1 --> RedLED : "Anode"
RedLED --> GND_PI : "Cathode"

GPIO23 --> R2 : "Signal"
R2 --> YellowLED : "Anode"
YellowLED --> GND_PI : "Cathode"

GPIO24 --> R3 : "Signal"
R3 --> GreenLED : "Anode"
GreenLED --> GND_PI : "Cathode"

note right of RaspberryPi
  Software:
  Python State Machine
  RPi.GPIO Library
  Red (5s) → Green (5s) → Yellow (2s) → Red
end note

@enduml